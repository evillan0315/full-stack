<div class="min-h-screen p-6 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-2xl font-semibold mb-6">{{title}}</h1>

    <div class="overflow-x-auto bg-white shadow rounded-md">
      <table class="min-w-full border border-gray-200">
        <thead class="bg-gray-100">
          <tr>
            {{#each fields}}
              <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 border-b">
                {{capitalize name}}
              </th>
            {{/each}}
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 border-b">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each lists}}
            <tr class="hover:bg-gray-50">
              {{#each ../fields}}
                <td class="px-4 py-2 border-b text-sm text-gray-800">
                  {{lookup ../this name}}
                </td>
              {{/each}}
              <td class="px-4 py-2 border-b text-sm text-blue-600">
                <!-- Replace with actual routes or handlers -->
                <a href="/{{../model}}/edit/{{this.id}}" class="hover:underline">Edit</a> |
                <a href="/{{../model}}/delete/{{this.id}}" class="hover:underline text-red-500">Delete</a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="{{add (length fields) 1}}" class="px-4 py-4 text-center text-gray-500">
                No records found.
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

